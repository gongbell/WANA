{
  "name": "monsters-demux",
  "version": "1.0.0",
  "author": "Leo Ribeiro",
  "license": "MIT",
  "dependencies": {
    "@types/cors": "^2.8.4",
    "@types/mongodb": "^3.1.4",
    "@types/node-fetch": "^2.1.2",
    "cors": "^2.8.4",
    "demux": "^2.0.0",
    "demux-eos": "^2.0.0",
    "demux-postgres": "^2.0.0",
    "dockerode": "^2.5.5",
    "dotenv": "^6.0.0",
    "eosjs2": "^0.0.12",
    "express": "^4.16.3",
    "graphile-utils": "^4.0.0-rc.5",
    "massive": "^5.2.0",
    "moment": "^2.22.2",
    "mongodb": "^3.1.4",
    "node-fetch": "^3.1.1",
    "pg-monitor": "^1.0.0",
    "pm2": "^3.0.0",
    "postgraphile": "^4.0.0-rc.3",
    "ts-node": "^7.0.1"
  },
  "devDependencies": {
    "@types/dockerode": "^2.5.5",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/massive": "^4.6.1",
    "eslint": "^4.9.0",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-import": "^2.7.0",
    "jest": "^22.4.3",
    "jest-coverage-ratchet": "^0.2.3",
    "ts-jest": "^23.1.3",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "^3.0.1"
  },
  "scripts": {
    "start": "pm2-dev start pm2.config.js",
    "build": "yarn build-ts && yarn lint",
    "migrate": "docker-compose run demux yarn _migrate",
    "_migrate": "./migrate.sh up pets",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "which": "which pm2-dev",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "pm2-install": "pm2 install typescript && pm2 install ts-node",
    "coverage": "jest --coverage",
    "test": "jest",
    "ratchet": "jest-coverage-ratchet"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(tsx?)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testRegex": "(/src/.*(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "coverageReporters": [
      "json-summary",
      "text",
      "text-summary"
    ]
  }
}
